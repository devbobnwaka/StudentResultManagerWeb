@model CreateStudentViewModel

<div>Register</div>

<form enctype="multipart/form-data" method="POST" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <div>
            <label asp-for="FirstName"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="LastName"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="Email"></label>
            <div class="col-sm-10">
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="Class"></label>
            <div class="col-sm-10">
                <select asp-for="Class" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Class>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="ContactInformation"></label>
            <div class="col-sm-10">
                <textarea asp-for="ContactInformation"></textarea>
                <span asp-validation-for="ContactInformation" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="EnrollmentDate"></label>
            <div class="col-sm-10">
                <input asp-for="EnrollmentDate"/>
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="DateOfBirth"></label>
            <div class="col-sm-10">
                <input asp-for="DateOfBirth"/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="PhotoPath"></label>
            <div class="col-sm-10">
                <input asp-for="PhotoPath" />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
        </div>

        <div>
            <label asp-for="Password"></label>
            <div class="col-sm-10">
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div>
            <label asp-for="ConfirmPassword"></label>
            <div class="col-sm-10">
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button>Submit</button>
</form>